<h1>Packages</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Version</th>
      <th>Publication Date</th>
      <th>Title</th>
      <th>Description</th>
      <th>Authors</th>
      <th>Maintainers</th>
    </tr>
  </thead>
  <tbody>
    <% @packages.each do |pkg| %>
      <% present(pkg) do |package|%>
        <tr>
          <td><%= package.name %></td>
          <td><%= package.version %></td>
          <td><%= package.publication_date %></td>
          <td><%= package.title %></td>
          <td><%= package.description %></td>
          <td><%= package.authors %></td>
          <td><%= package.maintainers %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

